<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/0809522334.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-arrow-circle-right"></i>
            My Orders List
        </h1>


        
        <form id="new-order-form" action="/create-Order" method="POST">
            <input type="text" maxlength="15" name="AWBNo" placeholder="Enter AWB No." required>
            <input type="text" name="Origin" placeholder="Enter Origin" required>
            <input type="text" name="Dest" placeholder="Enter Destination" required>
            <input type="number" min="0" step="0.001" name="Weight" placeholder="Enter Weight(in kgs)" required>
            <input type="text" name="ClientName" placeholder="Enter Name" required>
            <input type="text" name="ClientID" placeholder="Enter ID" required>
            
            <button type="submit"> Place Order </button>
        </form>



        <div id="order-list-container">
            <ul>
                <% for(let order of Order_List) { %>
                    <li class="order">
                        <div class="details">
                            <p>AWB No.: <%= order.AWBNo%></p>
                            <p>Origin: <%= order.Origin%></p>
                            <p>Dest: <%= order.Dest%></p>
                            <p>Weight: <%= order.Weight%></p>
                            <p>ClientName: <%= order.ClientName%></p>
                            <p>ClientID: <%= order.ClientID%></p>
                        </div>
                        <div class="delete-button">
                            <a href="/delete-order/?id=<%= order._id%>">
                                <i class="fas fa-window-close"></i>
                            </a>
                        </div>
                    </li>
                <%}%> 
            </ul>
        </div>

        

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>